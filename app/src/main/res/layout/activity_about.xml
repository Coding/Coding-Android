<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide"
    tools:context="net.coding.program.setting.AboutActivity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/icon_user_monkey_circle" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Coding-让开发更简单"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="222"
        android:textColor="@color/font_6"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <include layout="@layout/divide_top_15" />

        <RelativeLayout
            android:id="@+id/markCoding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingBottom="@dimen/padding_12"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_15"
            android:paddingTop="@dimen/padding_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="给 Coding 好评"
                android:textColor="@color/font_1"
                android:textSize="18sp" />

        </RelativeLayout>

        <View style="@style/DivideLine" />

        <RelativeLayout
            android:id="@+id/checkUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingLeft="@dimen/padding_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="检查更新"
                android:textColor="@color/font_1"
                android:textSize="18sp" />

        </RelativeLayout>

        <include layout="@layout/divide_bottom_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/codingWebsite"
            style="@style/aboutBottomText"
            android:text="官网：https://coding.net" />

        <TextView
            android:id="@+id/email"
            style="@style/aboutBottomText"
            android:text="E-mail：support@coding.net" />

        <TextView
            android:id="@+id/weibo"
            style="@style/aboutBottomText"
            android:text="微博：Coding" />

        <TextView
            android:id="@+id/wechat"
            style="@style/aboutBottomText"
            android:text="微信：扣钉Coding" />

    </LinearLayout>

</RelativeLayout>



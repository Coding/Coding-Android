<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide"
    android:orientation="vertical"
    tools:context="net.coding.program.project.detail.merge.MergeDetailActivity">

    <include layout="@layout/common_actionbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/stand_bg"
            android:clipToPadding="false"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:drawSelectorOnTop="true"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false" />


        <include
            android:id="@+id/blankLayout"
            layout="@layout/view_exception"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <include layout="@layout/divide_line_1" />

    <LinearLayout
        android:id="@+id/actionLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/stand_bg"
        android:gravity="center_vertical"
        tools:visibility="visible"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:paddingRight="16dp"
        android:paddingLeft="8dp"
        android:visibility="gone">


        <com.flyco.roundview.RoundTextView
            android:id="@+id/actionCancel"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/bottom_button_padding"
            android:layout_weight="1"
            android:background="@drawable/edit_send"
            app:rv_strokeColor="@color/divide_line"
            android:textSize="15sp"
            app:rv_strokeWidth="1dp"
            android:gravity="center"
            app:rv_cornerRadius="2dp"
            android:text="取消"
            android:textColor="@color/font_1" />


        <com.flyco.roundview.RoundTextView
            android:id="@+id/actionRefuse"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/bottom_button_padding"
            android:layout_weight="1"
            android:gravity="center"
            app:rv_cornerRadius="2dp"
            android:textSize="15sp"
            app:rv_backgroundColor="#FFF56061"
            android:text="拒绝"
            android:textColor="@color/font_white" />


        <com.flyco.roundview.RoundTextView
            android:id="@+id/actionAuth"
            android:layout_width="0dp"
            app:rv_cornerRadius="2dp"
            app:rv_backgroundColor="@color/font_green"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/bottom_button_padding"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="授权"
            android:textColor="@color/font_white" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/actionCancelAuth"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/bottom_button_padding"
            android:layout_weight="1"
            app:rv_cornerRadius="2dp"
            app:rv_backgroundColor="@color/font_green"
            android:gravity="center"
            android:textSize="15sp"
            android:text="撤消授权"
            android:textColor="@color/font_white" />


        <com.flyco.roundview.RoundTextView
            android:id="@+id/actionAccept"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/bottom_button_padding"
            android:layout_weight="1"
            android:textSize="15sp"
            app:rv_cornerRadius="2dp"
            app:rv_backgroundColor="@color/font_2"
            android:gravity="center"
            android:text="合并"
            android:textColor="@color/font_white" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<org.apmem.tools.layouts.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_12"
    android:layout_marginLeft="@dimen/padding_15"
    android:layout_marginRight="@dimen/padding_15"
    android:layout_marginTop="@dimen/padding_12"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/branchSrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:background="@drawable/shape_merge_detail_rectangle"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="merge_request"
        android:textColor="@color/merge_gray" />

    <View
        android:layout_width="13dp"
        android:layout_height="4.5dp"
        android:layout_margin="@dimen/padding_10"
        android:background="@drawable/merge_detail_arrow" />

    <TextView
        android:id="@+id/branchDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:background="@drawable/shape_merge_detail_rectangle"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="master"
        android:textColor="@color/merge_gray" />
</org.apmem.tools.layouts.FlowLayout>

    
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:showIn="@layout/enterprise_activity_login">

    <net.coding.program.common.widget.LoginEditText
        android:id="@+id/enterpriseEdit"
        style="@style/EmailEdit"
        app:hint="企业域名"
        app:digits="@string/input_format_global_key"
        android:layout_weight="1"
        android:layout_width="0dp"
        app:topLine="false" />

    <View
        style="@style/DivideLineVer"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/countryCode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_15"
        android:focusable="false"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:text=".coding.net"
        android:textColor="@color/font_2"
        android:textSize="17sp" />

</LinearLayout>

                            
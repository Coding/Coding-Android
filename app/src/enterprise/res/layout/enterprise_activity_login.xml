<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/TranslateActionbar"
        tools:showIn="@layout/fragment_main_project">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/login_2fa"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="@string/title_activity_login2_fatip"
                    android:textColor="@color/font_green"
                    android:textSize="15sp" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/rootScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/layoutRoot"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/activity_vertical_margin">

                        <LinearLayout
                            android:id="@+id/loginLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <TextView
                                android:id="@+id/toolbarTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="28dp"
                                android:gravity="center_vertical"
                                android:text="登录"
                                android:textColor="#272C33"
                                android:textSize="28sp" />

                            <include layout="@layout/enterprise_name_layout" />

                            <View
                                android:id="@+id/enterpriseLine"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                style="@style/LoginBottomLine" />

                            <net.coding.program.common.widget.LoginEditTextNew
                                android:id="@+id/editName"
                                style="@style/EmailEdit"
                                app:hint="用户名/手机/邮箱" />

                            <net.coding.program.common.widget.LoginEditTextNew
                                android:id="@+id/editPassword"
                                style="@style/EmailEdit"
                                app:hint="密码"
                                app:loginInput="password"
                                app:showPassword="true" />

                            <RelativeLayout
                                android:id="@+id/captchaLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/editValify"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="true"
                                    android:background="@drawable/login_edit"
                                    android:hint="验证码"
                                    android:singleLine="true"
                                    android:textColor="@color/font_white"
                                    android:textColorHint="@color/font_white_disable"
                                    android:textCursorDrawable="@null"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:id="@+id/imageValify"
                                    android:layout_width="72dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:scaleType="fitCenter" />


                                <View
                                    android:id="@+id/captchaLine"
                                    style="@style/LoginBottomLine" />

                                <View
                                    android:id="@+id/valifyLine"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    style="@style/LoginBottomLine" />

                            </RelativeLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layout2fa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_rect_2fa"
                                android:gravity="center"
                                android:padding="@dimen/padding_12"
                                android:text="您的帐户开启了两步验证，请输入动态验证码"
                                android:textColor="#ffEB7A19" />


                            <net.coding.program.common.LoginEditText
                                android:id="@+id/edit2FA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/login_edit"
                                android:hint="输入动态验证码"
                                android:imeOptions="actionUnspecified"
                                android:inputType="number"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/font_white"
                                android:textColorHint="@color/font_white_disable"
                                android:textCursorDrawable="@null"
                                android:textSize="18sp"
                                app:dark="true" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/loginFail"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginLeft="15dp"
                                android:text="找回密码"
                                android:textColor="@color/font_green"
                                android:textSize="14sp" />

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/loginButton"
                                android:layout_width="@dimen/float_button"
                                android:layout_height="@dimen/float_button"
                                android:layout_alignParentRight="true"
                                android:background="@color/font_green"
                                app:elevation="6dp"
                                app:borderWidth="0dp"
                                app:backgroundTint="@color/font_green"
                                android:layout_marginTop="10dp" />

                        </RelativeLayout>
                    </LinearLayout>


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/register"
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="21dp"
                            android:gravity="center"
                            android:text="去注册"
                            android:textColor="@color/font_white"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
